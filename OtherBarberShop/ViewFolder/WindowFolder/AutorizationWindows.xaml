<Window x:Class="OtherBarberShop.ViewFolder.WindowFolder.AutorizationWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OtherBarberShop.ViewFolder.WindowFolder"
        mc:Ignorable="d"
        Title="АВТОРИЗАЦИЯ" 
        Height="300" Width="600">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Margin="0 0 0 10" Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock 
                    Margin="0 0 5 0"
                    Style="{StaticResource StyleTExtBlock}"
                    Text="LOGIN"/>
                <TextBox
                    Style="{StaticResource TextBoxStyle}"
                    Width="400"/>
            </StackPanel>
            <StackPanel Margin="0 10 0 0" Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock 
                    Margin="0 0 5 0"
                    Style="{StaticResource StyleTExtBlock}"
                    Text="PASSWORD"/>
                <TextBox 
                    Style="{StaticResource TextBoxStyle}"
                    Width="400"/>
            </StackPanel>
            <Button
                Click="ConnectButton_Click"
                x:Name="ConnectButton"
                Margin="0 30 0 0"
                Height="40" 
                Width="200"
                Content="CONNECT"/>
        </StackPanel>        
    </Grid>
</Window>